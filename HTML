<!-- logika wyszukiwania --> 

<script>
var haystackText = "";
var p = document.getElementById("textmessage");



function findMyText(find, replacement) {
     if (haystackText.length == 0) {
          haystackText = document.getElementById("content").innerHTML;
     }
	 if (find.length == 0 && replacement.length == 0  ) {
			  var p = document.getElementById("textmessage");
			  p.textContent ="Wprowadz dane!";
               return;   														         
		}				
				
		var match = new RegExp(find, "ig");  
        var replaced = "";
		
        var counter = (haystackText.match(match)).length;	
	  
     if (replacement.length > 0 && find.length > 0) {	   
          replaced = haystackText.replace(match, replacement);
		  document.getElementById('textmessage').innerHTML =  "Zmieniono :" + counter;			
	 
     }
	 else if (replacement.length > 0 && find.length == 0){
	        	 var p = document.getElementById("textmessage");
			      p.textContent ="Brak danych do zamiany!";
		    			 
			 		  return;   			 
	 }	
     else {
          var boldText = "<div class='count' style=\"background-color: yellow; display: inline; font-weight: bold;\">" + find + "</div>";
          replaced = haystackText.replace(match, boldText);	  
		  document.getElementById('textmessage').innerHTML =  "trafień :" + counter;	 		  
				  			 
    }
	  document.getElementById("content").innerHTML = replaced;
	  
    
	  
	  
}
</script>
<!-- Włącz/wyłacz widzialność przycisku zmien/wyszukaj -->
   <script type="text/javascript">
        function toggle_visibility(id) {
           var e = document.getElementById(id);
           if(e.style.display == 'block')
              e.style.display = 'none';
           else
              e.style.display = 'block';
        }
 </script>
	
	

	
	




	<!-- Wyświetla dane "wyszukaj"-->
<div  style="position: absolute; margin-left: 15px;z-index:1;background: white; width:350px; " >


<button   href="#" onclick="toggle_visibility('foo');" >Szukaj/Zmień</button>
<div id="foo" style="display: none ;height: 15px;"  >

	


<input style="width:350px;  margin-bottom: 5px; margin-top: 15px;"  id="find" name="find" placeholder="Zmień z/Wyszukaj" type="text">
<br>
<input  style="width:350px;  margin-bottom: 5px;" id="replacement" name="replacement" placeholder="Na"type="text">
<p id="textmessage" style=""><p id="textmessageValue"></p></p>


<input type="button" value="Wykonaj" style="float:left;" onClick="findMyText(document.getElementById('find').value, document.getElementById('replacement').value);">
</div>

</div>
